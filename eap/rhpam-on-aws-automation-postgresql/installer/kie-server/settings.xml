<settings>
    <servers>
        <server>
            <id>rhpam</id>
            <username>${MAVEN_REPO_USERNAME}</username>
            <password>${MAVEN_REPO_PASSWORD}</password>
        </server>
    </servers>
    <profiles>
        <profile>
            <id>custom-repo</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <repositories>
                <repository>
                    <id>rhpam</id>
                    <url>${MAVEN_REPO_URL}</url>
                </repository>
            </repositories>
        </profile>
    </profiles>
</settings>
